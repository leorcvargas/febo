{
  "name": "monitor-service",
  "version": "1.0.0",
  "description": "Tickets Monitor Service",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/server.ts",
    "start": "nodemon ./dist/server.js",
    "prod": "npm run build && npm run server-restart",
    "server-restart": "forever stopall && NODE_ENV=production forever start ./dist/server.js",
    "nodemon": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts"
  },
  "author": "Leonardo Rodrigues de Carvalho Vargas",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.2.11",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "mongoose": "^5.2.14",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nodemon": "^1.18.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "devDependencies": {}
}
